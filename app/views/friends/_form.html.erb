<%= form_for @friend do |f| %>
<%= f.label :first_name %>
<%= f.text_field :first_name %>

<%= f.label :last_name %>
<%= f.text_field :last_name %>

<%= f.label "Year Born" %>
<%= f.date_field :birth %>

<%= f.label :age %>
<%= f.text_field :age %>
 <%# <% (date_of_birth = :alive) %>
<%# <% :age = (Time.zone.now - date_of_birth) %>

<%= f.label :hair_color %>
<%= f.text_field :hair_color %>

<%= f.label :eye_color %>
<%= f.text_field :eye_color %>

<%= f.label :living %>
<%= f.check_box :living %>

<%= f.submit %>
<%= link_to 'back', friends_path %>
<% end %>
